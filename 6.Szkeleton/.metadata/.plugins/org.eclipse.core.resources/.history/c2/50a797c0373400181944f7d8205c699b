package server;

import java.io.ObjectInputStream;

public class KliensOlvaso {
	
	Jatek c;
	
	boolean fut;
	ObjectInputStream in;
	
	public KliensOlvaso(ObjectInputStream ois, Jatek c) 
	{
		fut=true;
		in = ois;
		this.c=c;	
	}
	
	//@SuppressWarnings("static-access")
	public void run() 
	{
		while(fut) {
			try {
				Object n = in.readObject();		
				if (n!=null) 
				{
					c.print(((KliensAdat)n));
				} 
	
			} catch (Exception e) {
				// TODO Auto-generated catch block
			}		
		}
	}
	
	public void Kill() {fut = false;}
	
}
